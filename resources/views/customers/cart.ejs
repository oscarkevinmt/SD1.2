<section class="cart py-16">
   <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <h1 class="font-bold ml-4 text-2xl">Pago con tarjeta</h1>
        </div>
        <hr>
        <% if(user) { %>
        <div class="text-right py-4">
            <div>
                <form action="/orders" method="POST" class="mt-12" id="payment-form">
                    <div class="relative w-1/2 ml-auto mb-4">
                        <select id="paymentType" name="paymentType" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
                            <option value="cod">Tarjeta</option>
                            <option style="display: none;" value="card">E</option> 
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                        </div>
                      </div>
                    <input name="tarjeta" class="border border-gray-400 p-2 w-1/2 mb-4" minlength="16" maxlength="16" type="text"
                        placeholder="Tarjeta">
                    <input name="pin" class="border border-gray-400 p-2 w-1/2 mb-4" minlength="4" maxlength="4" type="text" placeholder="PIN">
                    <input name="monto" class="border border-gray-400 p-2 w-1/2" maxlength="10" type="text" placeholder="Monto $">
                    <input name="concepto" class="border border-gray-400 p-2 w-1/2" maxlength="4" type="text" placeholder="ID Orden">
                    <div class="mt-4">
                        <div id="card-element"></div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Pagar</button>
                    </div>
                </form>
            </div>
            <% }else{ %>
                <% } %>

        
        </div>
        
   </div>
</section>
